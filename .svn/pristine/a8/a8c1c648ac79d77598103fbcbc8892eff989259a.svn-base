@@include('layout/layout/index.html', {
"title": "八块钱商城",
"header": false
})

<div id="seller_layout" class="layout-view">
    <div class="phone_bind">
        <!-- phone_bind头部 -->
        <div class="phone_bind_text">
            <div class="phone_bind-text-now">绑定手机</div>
            <p class="phone_bind-text-new">新用户欢迎您~</p>
        </div>
        <!-- phone_bind主体 -->
        <div class="phone_bind_main">
            <form action="#">
                <!-- phone_bind主体内容区 -->
                <div class="phone_bind_content">
                    <div class="phone_bind_main_phone">
                        <h5 class="phone_bind_phone"><span>手机号码</span></h5>
                        <div class="phone_bind_phone_num">
                            <!-- <div class="phone_bind_main_icons"></div> -->
                            <input id="phoneNum" type="tel" placeholder="请输入手机号码">
                            <div id="phone_wrong_msg" class="phoneBind_wrong_msg">请输入正确的手机号码</div>
                        </div>

                    </div>
                    <div class="phone_bind_main_code">
                        <h5 class="phone_bind_code"><span>验证码</span></h5>
                        <div class="phone_bind_code_num">
                            <!-- <div class="phone_bind_code_icons"></div> -->
                            <input id="phoneCode" type="number" placeholder="请输入验证码">
                            <button type="button" id="btnSendCode" class="phone_bind_send_code">获取验证码</button>
                            <div id="code_wrong_msg" class="phoneBind_code_wrong_msg">验证码不正确</div>
                        </div>

                    </div>
                </div>
                <!-- phone_bind主体底部 -->
                <div class="phone_bind_footer">
                    <div class="phone_bind_footer_now">
                        保存
                    </div>
                </div>
            </form>

        </div>

    </div>
</div>

@@include('layout/footer/index.html')