.home-main-box-assemble-item{
  position:relative;
  &::before{
    content:attr(data-name);
    position:absolute;
    width: 0.94rem;
    height: 0.46rem;
    background-color:rgba(255,222,69,1);
    border-radius:0 0.24rem 0.24rem 0;
    display:flex;
    align-items: center;
    justify-content: center;
    font-size: 0.24rem;
    font-weight:bold;
    color:rgba(51,51,51,1);
    left:0;
    top: 0.12rem;
  }
}
#assemble_layout{
  .home-main-box-assemble-item{
    position:relative;
    &::before{
      top: 0.44rem;
    }
  }
}
