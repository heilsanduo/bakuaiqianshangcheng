@import "../../../styles/common.less";
/* 首页商品列表 */
.home-product-list{
  width: 100%;
  display:flex;
  justify-content: space-between;
  align-content: space-between;
  flex-wrap: wrap;
}
.home-product-item{
  width: 3.28rem;
  height: 5.36rem;
  border-radius: 0.2rem;
  overflow: hidden;
  box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
  background-color:#fff;
  float:left;
  margin-bottom: 0.32rem;
  display:flex;
  flex-direction: column;
  .hover-white-class
}
.home-product-item-icon{
  width: 3.28rem;
  height: 3.28rem;
  overflow: hidden;
  flex:none;
  .imgAll;
}
.home-product-item-content{
  flex:auto;
  display:flex;
  flex-direction: column;
  padding: 0.16rem 0.16rem 0.14rem 0.16rem;
  justify-content: space-between;
}
.home-product-item-content > div{
  width: 100%;
}
.home-product-item-name{
  height: 0.8rem;
  font-size: 0.26rem;
  font-weight:400;
  color:rgba(51,51,51,1);
  .fontBreak(2, 0.4rem);
}
.home-product-item-address{
  height: 0.34rem;
  font-size: 0.24rem;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.home-product-item-price{
  height: 0.44rem;
  display:flex;
  align-items: center;
  justify-content: space-between;
}
.home-product-item-price .price{
  font-size: 0.32rem;
  font-weight:800;
  color:rgba(241,90,83,1);
}
.home-product-item-price .buy{
  font-size: 0.24rem;
  font-weight:400;
  color:rgba(153,153,153,1);
}


/* 首页商品列表 - end*/
