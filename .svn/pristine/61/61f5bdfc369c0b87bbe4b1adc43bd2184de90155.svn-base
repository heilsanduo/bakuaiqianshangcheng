<script>
	((w, d) => {

		const TOPS = 200;
		$(document).ready(function () {
			const producrBanner = new Swiper('.particulars-detail-swiper', {
				direction: 'horizontal', // 垂直切换选项
				loop: true, // 循环模式选项
				pagination: '.home-swiper-pagination',
			})
			$("#particulars_detail_layout").on("scroll", function (e) {
				$(".seller-home-header").css({
					backgroundColor: `rgba(255,255,255, ${e.target.scrollTop / TOPS * 100}%)`,
					boxShadow: `0 0.08rem 0.32rem rgba(0,0,0,${e.target.scrollTop / TOPS * 100 * 0.08}%)`
				});
				$(".seller-home-header-title").css({
					opacity: `${e.target.scrollTop / TOPS}`
				});
				$(".seller-home-header-back span").css({
					backgroundImage: `url("${e.target.scrollTop > TOPS ? './images/header_back_black_icon.png' : './images/seller_home_header_back_icon.png'}")`,
					backgroundColor: `rgba(0,0,0, ${e.target.scrollTop > TOPS ? '0' : (0.16 - e.target.scrollTop / TOPS)})`
				})
			});
		})
	})(window, document)

</script>
<script>
	((w, d) => {
		var MAX = 99,
			MIN = 1;
		$('.weui-count__decrease').click(function (e) {
			var $input = $(e.currentTarget).parent().find('.weui-count__number');
			var number = parseInt($input.val() || "0") - 1
			if (number < MIN) number = MIN;
			$input.val(number)
		});
		$('.weui-count__increase').click(function (e) {
			var $input = $(e.currentTarget).parent().find('.weui-count__number');
			var number = parseInt($input.val() || "0") + 1
			if (number > MAX) number = MAX;
			$input.val(number)
		});
		$(".product-detail-attr-box").on("click", ".prodet-attr-nav", function (e) {
			console.log(124)
			$(this).addClass("prodet-attr-active").siblings().removeClass("prodet-attr-active")
			// $(this).parents(".prodet-attr-item").find(".prodet-attr-nav").removeClass("prodet-attr-active")
		});
		w.onload = e => {
			$(".product-detail-footer-collect").on("click", function (e) {
				w.util.toast('触发收藏')
				$(this).toggleClass("product-detail-footer-collect-active")
			});
			$(".particulars-detail-attr").on("click", function (e) {
				$(".action-sheet").addClass("action-sheet-active")
			});
			$(".product-detail-footer-appointment").on("click", function (e) {
				$(".action-sheet").addClass("action-sheet-active")
			});
			$(".product-detail-footer-pay").on("click", function (e) {
				$(".action-sheet").addClass("action-sheet-active")
			});
			$(".product-detail-home-appointment-close").on("click", function (e) {
				$(".action-sheet").removeClass("action-sheet-active")
			});
			$(".action-sheet-mask").on("click", function (e) {
				$(".action-sheet").removeClass("action-sheet-active")
			});
		}
	})(window, document)

</script>



