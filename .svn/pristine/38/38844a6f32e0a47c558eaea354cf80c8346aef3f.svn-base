@import "../../../styles/common.less";
// 商家列表
.seller-list-view{
  display:flex;
  flex-direction: column;
}
.seller-list-box{
  width: 100%;
  padding:0 0.32rem;
  flex:auto;
  overflow-x: hidden;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.seller-list-nav{
  width: 100%;
  height:1.72rem;
  background-color:rgba(255,255,255,1);
  box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
  border-radius: 0.2rem;
  margin-bottom: 0.34rem;
  display:flex;
  padding: 0.32rem;
  .hover-class;
}
.seller-list-nav-icon{
  flex:none;
  margin-right: 0.32rem;
  height: 1.08rem;
  width: 1.6rem;
  .imgAll;
}
.seller-list-nav-content{
  flex:auto;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0.12rem 0;
  overflow: hidden;
}
.seller-list-nav-name{
  height: 0.32rem;
  display:flex;
  align-items: center;
}
.seller-list-nav-name .seller-name{
  font-size: 0.28rem;
  font-weight:800;
  color:rgba(51,51,51,1);
  .fontBreak(1, 0.32rem);
}
.seller-list-nav-address{
  height: 0.36rem;
  font-size: 0.24rem;
  font-weight:400;
  color:rgba(153,153,153,1);
  .fontBreak(1, 0.36rem);
}
.seller-list-tags{
  width: 0.28rem;
  height: 0.28rem;
  display:inline-block;
  margin-left: 0.16rem;
  .bgSet();
}
.seller-dgbank-tags{
  background-image: url("../images/tags-dgbank-icon.png");
}
.seller-coupon-tags{
  background-image: url("../images/tags-coupon-icon.png");
}









