@import "../../../styles/common.less";
/* 优惠券 */
.myCoupons{
    width:100%;
    height:100%;
    .mycoupons_header{
        width:100%;
        height:1rem;
        padding-left:0.32rem;
        box-sizing:border-box;
        background:rgba(255,255,255,1);
        box-shadow:0px 8px 32px rgba(0,0,0,0.08);
        display:flex;
        align-items: center;
        .mycoupons_header_text{
            flex:1;
           text-align: center;
            height:0.44rem;
            font-size:0.32rem;
            font-weight:800;
            color:rgba(51,51,51,1);
        }
        .mycoupons_header_arrows{
            width:0.32rem;
            height:0.32rem;                          
        }
       
    }
    
    .mycoupons_content{
        width:100%;
        height:100%;
        padding-left:0.32rem;
        padding-top:0.68rem;
        box-sizing:border-box;
        .mycoupons_title{
            overflow:hidden;
            height:0.88rem;       
            >ul li{
                float:left;
                width:0.99rem;
                height:0.4rem;
                font-size:0.28rem;
                font-weight:400;
                line-height:0.4rem;
                color:rgba(51,51,51,1);
               margin-right:0.64rem;
            }
            .active{
                font-size:0.32rem;
                font-weight:800;
                color:rgba(51,51,51,1);
            }
        }
        .mycoupons_cons{
            width: 100%;
            height: 100%;
            position: relative;
            .con{
                width: 100%;
                height: 100%;
                /* border: 1px solid #000; */
                display: none;
                position: absolute;
                left: 0;
                top:0; 
                .mycoupons_con{
                    width:6.86rem;
                    height:2.36rem;
                    background:rgba(255,255,255,1);
                    box-shadow:0px 8px 32px rgba(0,0,0,0.08);
                }
            }

        }
    }
}
