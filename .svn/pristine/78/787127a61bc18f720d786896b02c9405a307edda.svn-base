<script>
    $(function () {
        //选项卡
        $("#mycoupon-box-top div").click(function () {
            //点击当前的变高亮+排他
            $(this)
                .addClass("mycoupon-active")
                .siblings("div")
                .removeClass("mycoupon-active");
            //内容跟着出来
            $("#mycoupon-box-bottom .option")
                .eq($(this).index())
                .css("display", "block")
                .siblings()
                .css("display", "none");
        });
    });

</script>
