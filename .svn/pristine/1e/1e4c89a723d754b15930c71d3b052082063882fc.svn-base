@import "../../../styles/common.less";
// 手机登陆页面
.phone_login {
    width: 100%;
    height: 100%;
    background: url("../images/login_bg.png") no-repeat;
    background-size: 100% 4.48rem;
// 登录页面头部
    .phone_login_text {
        width: 100%;
        height: 2.18rem;
        padding-top: 0.48rem;
        padding-left: 0.32rem;
        box-sizing: border-box;
    }
    .phone_login-text-now {
        width: 100%;
        height: 0.56rem;
        font-size: 0.4rem;
        font-weight: 800;
        line-height: 0.56rem;
        color: rgba(51, 51, 51, 1);
    }

    .phone_login-text-now::before {
        content: "";
        display: inline-block;
        width: 0.32rem;
        height: 0.32rem;
        .bgSet();
        background-image: url("../images/login-left-arrows.png");
    }

    .phone_login-text-new {
        width: 100%;
        height: 0.34rem;
        font-size: 0.24rem;
        font-weight: 400;
        line-height: 0.34rem;
        color: rgba(51, 51, 51, 1);
    }
// 登录页面主体
    .phone_login_main {
        width: 100%;
        height: 10.5rem;
        padding-left: 0.32rem;
        box-sizing: border-box;
// form主体内容区 
        .phone_login_content {
            width: 6.86rem;
            height: 3.76rem;
            padding-left: 0.32rem;
            padding-top: 0.48rem;
            box-sizing: border-box;
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 0.08rem 0.32rem rgba(0, 0, 0, 0.08);
            border-radius: 0.2rem;
        }
        .phone_login_main_phone,
        .phone_login_main_code {
            width: 100%;
            height: 1.16rem;
            margin-bottom: 0.38rem;

        }
        .phone_login_phone,
        .phone_login_code {
            width: 100%;
            height: 0.44rem;
            font-size: 0.32rem;
            font-weight: 800;
            // line-height:0.42rem;
            color: rgba(51, 51, 51, 1);
        }

        .phone_login_phone_num,
        .phone_login_code_num {
            width: 6.2rem;
            height: 0.72rem;
            background: rgba(255, 255, 255, 1);
            border-bottom: 0.02rem solid rgba(245, 245, 245, 1);
            position: relative;

            >input {
                width: 100%;
                line-height: 0.72rem;
                background: none;
                outline: none;
                border: 0px;
                position: absolute;
                left: 0;
                top: 0;
            }

            .phoneLogin_wrong_msg {
                width: .3.66rem;
                height: 0.5rem;
                position: absolute;
                right: 0;
                top: 0;
                font-size: 0.15rem;
                color: red;
                // border:0.01rem solid #F15A53;
                // border-radius:0.2rem;
                text-align: center;
                line-height: 0.5rem;
                display: none;
            }

            .phone_login_main_icons {
                width: 1.24rem;
                height: 0.08rem;
                background: rgba(255, 222, 69, 1);
                position: absolute;
                left: 0;
                top: -0.06rem;
            }
        }
        // 发送验证码
        .phone_login_send_code {
            position: absolute;
            right: 0;
            top: 0;
            width: 2.16rem;
            height: 0.72rem;
            font-size: 0.24rem;
            background: rgba(239, 239, 239, 1);
            border-radius: 0.08rem;
            text-align: center;
            font-weight: 800;
            line-height: 0.72rem;
            border: 0;
            outline: none;
        }

        .phone_login_code_icons {
            width: 0.92rem;
            height: 0.08rem;
            background: rgba(255, 222, 69, 1);
            position: absolute;
            left: 0;
            top: -0.06rem;
        }

        .phoneLogin_code_wrong_msg {
            width: .3.66rem;
            height: 0.5rem;
            position: absolute;
            right: 2.48rem;
            top: 0;
            font-size: 0.15rem;
            color: red;
            // border:0.01rem solid #F15A53;
            // border-radius:0.2rem;
            text-align: center;
            line-height: 0.5rem;
            display: none;
        }
// form主体底部
        .phone_login_footer {
            width: 100%;
            height: 4.04rem;
            padding-top: 0.64rem;
            box-sizing: border-box;        
        }
       
        .phone_login_footer_now {
            width: 6.86rem;
            height: 0.84rem;
            background: rgba(239, 239, 239, 1);
            border-radius: 0.12rem;
            font-size: 0.26rem;
            text-align: center;
            line-height: 0.84rem;
            color: rgba(51, 51, 51, 1);
            font-weight: 800;
            margin-bottom: 0.96rem;

        }

        .phone_login_footer_phone {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .phone_login_phone_text {
            width: 2.4rem;
            height: 0.84rem;
            background: rgba(255, 222, 69, 1);
            border-radius: 0.12rem;
            font-size: 0.26rem;
            text-align: center;
            line-height: 0.84rem;
            font-weight: 800;
        }

        .phone_login_phone_text::before {
            content: "";
            display: inline-block;
            width: 0.36rem;
            height: 0.36rem;
            .bgSet();
            background-image: url("../images/login_footer_phone_icon.png");
            background-position-y: 0.05rem;
        }
    }

}


