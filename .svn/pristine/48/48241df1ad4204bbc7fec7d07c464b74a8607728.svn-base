.myorder-box {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;

	.myorder-box-top {
		width: 100%;
		height: 1.24rem;
		display: flex;
		// justify-content: space-around;
		align-items: center;
		// box-sizing: border-box;
		overflow-x: auto;
	}

	.myorder-box-top .divs {
		white-space: nowrap;
		height: 0.4rem;
		padding: 0 0.32rem;
		font-size: 0.28rem;
		font-weight: 400;
		line-height: 0.4rem;
		float: left;
		color: rgba(51, 51, 51, 1);
	}

	.myorder-active {
		height: .44rem;
		font-size: .32rem;
		font-weight: 800;
		line-height: .44rem;
		color: rgba(51, 51, 51, 1);
	}

	.myorder-box-bottom {
		width: 100%;
		flex: 1;
		overflow: auto;
	}

	.option {
		width: 100%;
		height: 100%;
		display: none;
	}

	.option-box {
		width: 100%;
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		overflow: auto;
	}

	.option-content {
		width: 6.86rem;
		height: auto;
		background: rgba(255, 255, 255, 1);
		box-shadow: 0px 0.08rem .32rem rgba(0, 0, 0, 0.08);
		border-radius: 20px;
		margin-bottom: .32rem;
		display: flex;
		flex-direction: column;
		padding: .34rem .32rem .32rem .32rem;
	}

	.option-content-top {
		width: 100%;
		height: .98rem;
		box-sizing: border-box;
		padding: .32rem 0;

		.option-content-top-left {
			width: .36rem;
			height: .36rem;
			margin-right: .16rem;
			float: left;
		}

		.option-content-top-left img {
			width: 100%;
			height: 100%;
		}

		.option-content-top-title {
			width: auto;
			height: .36rem;
			float: left;
			height: 0.34rem;
			margin-right: .16rem;
			font-size: .24rem;
			font-weight: 800;
			line-height: .34rem;
			color: rgba(51, 51, 51, 1);
		}

		.option-content-top-arrows {
			width: .32rem;
			height: .32rem;
			float: left;
		}

		.option-content-top-arrows img {
			width: 100%;
			height: 100%;
		}

		.option-content-top-obligation {
			width: .78rem;
			float: right;
			height: .3rem;
			font-size: .26rem;
			font-weight: 800;
			line-height: .36rem;
			color: rgba(241, 90, 83, 1);
		}
	}

	.option-content-middle {
		width: 100%;
		height: auto;

		.option-content-middle-left {
			width: 2rem;
			height: 2rem;
			float: left;
			border-radius: .12rem;
			margin-right: .36rem;
		}

		.option-content-middle-left img {
			width: 100%;
			height: 100%;
			border-radius: .12rem;
		}

		.option-content-middle-right {
			height: 2rem;
			float: right;
			width: 3.86rem;
			display: flex;
			flex-direction: column;

			.option-content-middle-right-top {
				width: 100%;
				height: .72rem;
				font-size: .26rem;
				font-weight: 400;
				line-height: .36rem;
				color: rgba(51, 51, 51, 1);
			}

			.option-content-middle-right-middle {
				width: 100%;
				height: .66rem;
				box-sizing: border-box;
				padding: .16rem 0;
				font-size: .24rem;
				font-weight: 400;
				line-height: .34rem;
				color: rgba(153, 153, 153, 1);
			}

			.option-content-middle-right-bottom {
				width: 100%;
				height: .60rem;
				font-size: .32rem;
				font-weight: 800;
				box-sizing: border-box;
				padding: .16rem 0;
				line-height: .36rem;
				color: rgba(241, 90, 83, 1);
				opacity: 1;
			}

			.option-content-middle-right-bottom span {
				width: auto;
				height: auto;
				font-size: .24rem;
				font-weight: 400;
				line-height: .36rem;
				color: rgba(153, 153, 153, 1);
				opacity: 1;
				padding-left: .12rem;
			}
		}
	}

	.option-content-bottom {
		width: 100%;
		height: .90rem;
		display: flex;
		position: relative;

		.option-cancel {
			width: 1.52rem;
			height: .66rem;
			background: rgba(239, 239, 239, 1);
			border-radius: .08rem;
			font-size: .24rem;
			text-align: center;
			font-weight: 800;
			line-height: .34rem;
			color: rgba(51, 51, 51, 1);
			box-sizing: border-box;
			padding: .16rem;
			position: absolute;
			left: 2.9rem;
			bottom: 0;

		}

		.option-payment {
			width: 1.52rem;
			height: .66rem;
			background: rgba(255, 222, 69, 1);
			border-radius: 8px;
			font-size: .24rem;
			font-weight: 800;
			line-height: .34rem;
			color: rgba(51, 51, 51, 1);
			box-sizing: border-box;
			padding: .16rem;
			position: absolute;
			left: 4.68rem;
			text-align: center;
			bottom: 0;
		}
	}
}