@import "../../../styles/common.less";
// 注册页面
.login{
    width:100%;
    height:100%;
    .login_header{
        width: 100%;
        height: 4.48rem;
        position:relative;
        background-image:url("../images/login_bg.png");
        .bgSet();
       .login_text{
            width:100%;
            height:100%;
            padding-left:0.32rem;
            box-sizing:border-box;
            padding-top:0.6rem;
          .login-text-now{
            width:100%;
            height:0.56rem;
            font-size:0.4rem;
            font-weight:800;
            line-height:0.56rem;
            color:rgba(51,51,51,1);
          }
          .login-text-now::before{
            content:"";
            display:inline-block;
            width:0.32rem;
            height: 0.32rem;
            .bgSet();
            background-image: url("../images/login-left-arrows.png");
          }
          .login-text-new{
            width:100%;
            height:0.34rem;
            font-size:0.24rem;
            font-weight:400;
            line-height:0.34rem;
            color:rgba(51,51,51,1);
          }
        }
        .login_main{
            position:absolute;
            left:0.3rem;
            top:2.18rem;
            width:6.86rem;
            height:3.76rem;
            padding-left:0.32rem;
            padding-top:0.48rem;
            box-sizing:border-box;
            background:rgba(255,255,255,1);
            box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
            border-radius:0.2rem;
            .login_main_phone,.login_main_dbpassword{
                width:100%;
                height:1.16rem;
                margin-bottom:0.38rem;
                .login_phone,.login_dbpassword{
                    width:1.28rem;
                    font-size:0.32rem;
                    font-weight:800;
                    color:rgba(51,51,51,1);
                    // border-bottom: 0.05rem solid #FFDE45;
                }
                .login_phone_num,.login_dbpassword_num{
                    width:6.2rem;
                    height:0.72rem;
                    background:rgba(255,255,255,1);
                    border-bottom:0.02rem solid rgba(245,245,245,1);
                    position:relative;
                    >input{
                        background:none;
                        outline:none;
                        border:0px;
                        position: absolute;
                        left:0;
                        top:0.2rem;
                    }
                    .login_phone_wrong_msg{
                        width:.3.66rem;
                        height:0.5rem;
                        position: absolute;
                        right:0;
                        top:-0.2rem;
                        font-size: 0.15rem;
                        color:red;
                        // border:0.01rem solid #F15A53;
                        // border-radius:0.2rem;
                        text-align:center;
                        line-height:0.5rem;
                        display:none;
                    }
                    .login_phone_main_icons{
                        width:1.24rem;
                        height:0.08rem;
                        background:rgba(255,222,69,1);
                        position: absolute;
                        left:0;
                        top:-0.06rem;
                    }
                   
                }
                .login_dbpassword_num{
                    .login_password_code_icons{
                        width:0.6rem;
                        height:0.08rem;
                        background:rgba(255,222,69,1);
                        position: absolute;
                        left:0;
                        top:-0.06rem;
                    }
                    .login_password_wrong_msg{
                        width:.3.66rem;
                        height:0.5rem;
                        position: absolute;
                        right:0;
                        top:-0.2rem;
                        font-size: 0.15rem;
                        color:red;
                        // border:0.01rem solid #F15A53;
                        // border-radius:0.2rem;
                        text-align:center;
                        line-height:0.5rem;
                        display:none;
                    }
                }         
            }
        }
        span{
          .yellowBottom()
        }
    }
    .login_footer{
        width:100%;
        height:7.58rem;
        padding-top: 2.15rem;
        box-sizing:border-box;
        .login_footer_text{
            width:100%;
            display:flex;
            padding-bottom:0.6rem;
            box-sizing:border-box;
            .login_footer_forget{
                flex:1;
                font-size:0.24rem;
                font-weight:800;
                line-height:0.34rem;
                color:rgba(51,51,51,1);
                padding-left:0.32rem;
                box-sizing:border-box;
            }
            .login_footer_new{
                flex:1;
                font-size:0.24rem;
                font-weight:800;
                line-height:0.34rem;
                color:rgba(241,90,83,1);
                text-align:right;
                padding-right:0.32rem;
                box-sizing:border-box;
            }
        }
        .login_footer_now{
            width:6.86rem;
            height:0.84rem;
            background:rgba(239,239,239,1);
            border-radius:0.12rem;
            font-size: 0.26rem;
            text-align:center;
            line-height:0.84rem;
            color:rgba(51,51,51,1);
            font-weight:800;
            margin-left:0.32rem;
            margin-bottom:1.02rem;

        }
        .login_footer_phone{
            display:flex;
            justify-content: center;
            align-items:center;
            .login_phone_text{
                width:3.18rem;
                height:0.84rem;
                background:rgba(255,222,69,1);
                border-radius:0.12rem;
                font-size: 0.26rem;
                text-align:center;
                line-height:0.84rem;
                font-weight:800;
            }
            .login_phone_text::before{
                content:"";
                display:inline-block;
                width:0.36rem;
                height: 0.36rem;
                .bgSet();
                background-image: url("../images/login_footer_phone_icon.png");
                background-position-y: 0.05rem;
            }
        }
    }
}


