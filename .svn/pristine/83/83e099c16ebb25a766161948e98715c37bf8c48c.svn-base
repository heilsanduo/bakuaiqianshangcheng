@import "../../../styles/common.less";
@import "../../../styles/main.less";

.product-detail-swiper{
  width: 100%;
  height: 7.5rem;
  overflow: hidden;
  position:relative;
}
.product-detail-box{
  width: 6.86rem;
  height: 3.58rem;
  background-color:rgba(255,255,255,1);
  box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
  border-radius: 0.2rem;
  margin: 0.12rem auto;
  transform: translateY(-0.44rem);
  position: relative;
  z-index: 20;
  padding: 0.16rem 0 0 0.32rem;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-detail-price{
  width: 100%;
  height: 0.56rem;
  display:flex;
  align-items: center;
}
.product-detail-price .price{
  font-size: 0.4rem;
  font-weight:bold;
  color:rgba(241,90,83,1);
}
.product-detail-price .old-price{
  font-size: 0.24rem;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-left: 0.16rem;
}
.product-detail-des{
  width: 100%;
  height: 0.84rem;
  font-size: 0.28rem;
  font-weight:400;
  color:rgba(51,51,51,1);
  .fontBreak(2, 0.42rem);
}





























