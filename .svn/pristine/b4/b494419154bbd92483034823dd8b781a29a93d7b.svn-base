@import "../../../styles/common.less";
// 注册页面
.register{
    width:100%;
    height:100%;
    .register_header{
        width: 100%;
        height: 5.52rem;
        position:relative;    
        background-image:url("../images/register_bg.png");
        .bgSet();
       .register_text{
            width:100%;
            height:100%;
            padding-left:0.32rem;
            box-sizing:border-box;
            padding-top:0.6rem;
          .register-text-now{
            width:100%;
            height:0.56rem;
            font-size:0.4rem;
            font-weight:800;
            line-height:0.56rem;
            color:rgba(51,51,51,1);
          }  
          .register-text-now::before{
            content:"";
            display:inline-block;
            width:0.32rem;
            height: 0.32rem;
            .bgSet();
            background-image: url("../images/login-left-arrows.png");                  
          }
          .register-text-new{
            width:100%;
            height:0.34rem;
            font-size:0.24rem;
            font-weight:400;
            line-height:0.34rem;
            color:rgba(51,51,51,1);
          }  
        }
        .register_main{
            position:absolute;
            left:0.3rem;
            top:2.02rem;
            width:6.86rem;
            height:6.76rem;
            padding-left:0.32rem;
            padding-top:0.48rem;
            box-sizing:border-box;
            background:rgba(255,255,255,1);
            box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
            border-radius:0.2rem;
            .register_main_phone,.register_main_password,.register_main_dbpassword,.register_main_code{
                width:100%;
                height:1.16rem; 
                margin-bottom:0.38rem; 
                .register_phone,.register_password,.register_dbpassword,.register_code{
                    width:1.28rem;
                    // height:0.44rem;
                    font-size:0.32rem;
                    font-weight:800;
                    // line-height:0.42rem;
                    color:rgba(51,51,51,1);
                    border-bottom: 0.05rem solid #FFDE45;
                }
                .register_phone_num,.register_password_num,.register_dbpassword_num,.register_code_num{
                    width:6.2rem;
                    height:0.72rem;
                    background:rgba(255,255,255,1);
                    border-bottom:0.02rem solid rgba(245,245,245,1);
                    position:relative;
                    >input{
                        background:none;
                        outline:none;
                        border:0px;
                        position: absolute;
                        left:0;
                        top:0.2rem;
                    }
                }
                .register_code_num{
                    .register_send_code{
                        position: absolute;
                        right:0;
                        top:0;
                        width:2.16rem;
                        height:0.72rem;
                        font-size: 0.24rem;
                        background:rgba(239,239,239,1);
                        border-radius:0.08rem;
                        text-align:center;
                        font-weight:800;
                        line-height:0.72rem;                       
                        border: 0;
                        outline: none;
                    }
                }

            }
        }
       
    }
    .register_footer{
        width:100%;
        height:6.54rem;
        padding-top: 3.75rem;
        box-sizing:border-box;
        .register_footer_text{
            width:100%;
            display:flex;
            padding-bottom:0.6rem;
            box-sizing:border-box;
            .register_footer_icon{
                flex:1;
                display:flex;
                justify-content: center;
                align-items: center;
                >img{
                    display:inline-block;
                    width:0.32rem;
                    height:0.32rem;        
                }
            }
            .register_footer_agree{
                flex:6; 
                display:flex;  
                .register_agree_read{
                    font-size: 0.24rem;
                    font-weight:800;
                    line-height:0.34rem;
                    color:rgba(51,51,51,1);
                    padding-right:0.1rem;
                    box-sizing: border-box;
                }
                .register_agree_file{
                    font-size:0.24rem;
                    font-weight:800;
                    line-height:0.34rem;
                    color:rgba(241,90,83,1);
                }
            }
            .register_footer_login{
                flex:3;
                font-size:0.24rem;
                font-weight:800;
                line-height:0.42rem;
                color:rgba(241,90,83,1);
                display:flex;
                justify-content: center;
                align-items: center;
            }
        }
        .register_footer_now{
            width:6.86rem;
            height:0.84rem;
            background:rgba(239,239,239,1);
            border-radius:0.12rem;
            font-size: 0.26rem;
            text-align:center;
            line-height:0.84rem;
            color:rgba(51,51,51,1);
            font-weight:800;
            margin-left:0.32rem

        }
    }
}


