@import "../../../styles/common.less";
/* 首页的banner */
.home-swiper,
.home-swiper img{
  width: 100%;
  height: 4rem;
  overflow: hidden;
  position:relative;
}
.home-swiper::before{
  content:"";
  width: 100%;
  height: 0.3rem;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("../images/home-swiper-mask.png");
  display:inline-block;
  position:absolute;
  left:0;
  bottom:-1px;
  z-index: 50;
}
.home-swiper-pagination{
  width: 100%;
  height: 0.12rem;
  position:absolute;
  left:0;
  bottom: 0.52rem !important;
  display:flex;
  align-items: center;
  z-index: 20;
  justify-content: center;
}
.home-swiper-pagination span{
  background-color:#FFF;
  opacity: 1;
  transition: all linear 0.2s;
}
.home-swiper-pagination .swiper-pagination-bullet-active{
  width: 0.32rem;
  background-color:#FFDE45;
  border-radius: 0.06rem;
}
/* 首页的banner - end*/
