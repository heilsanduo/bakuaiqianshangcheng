@import "../../../styles/common.less";
.search-header{
  width: 100%;
  height: 1rem;
  display:flex;
  padding: 0.16rem 0.32rem;
  align-items: center;
  background-color:#fff;
  box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
  position:relative;
  z-index: 500;
}
.search-header-box{
  position:relative;
  width: 100%;
  height: 100%;
  background-color:rgba(245,245,245,1);
  border-radius: 0.34rem;
  overflow: hidden;
  display:flex;
}
.search-header-box::before{
  content:"";
  display:inline-block;
  width:0.44rem;
  height: 0.44rem;
  .bgSet();
  position:absolute;
  top: 50%;
  background-image: url("../images/search-black-icon.png");
  left:0.24rem;
  transform: translateY(-50%);
}
.search-header-box input{
  width: 100%;
  height: 100%;
  padding: 0.1rem 0.16rem 0.1rem 0.92rem;
  -webkit-appearance: none;
  outline: none;
  border: 0;
  line-height: 0.48rem;
  background-color:transparent;
  position:absolute;
  left:0;
  top:0;
  z-index: 20;
}
.search-header-box .search-placeholder{
  font-size: 0.24rem;
  font-weight:400;
  color:rgba(51,51,51,1);
}

