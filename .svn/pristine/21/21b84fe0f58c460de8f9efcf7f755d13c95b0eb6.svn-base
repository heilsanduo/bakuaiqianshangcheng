$(function() {
    // 弹窗
    $("#option-box .option-content-right").on('click', function() {
        $("#popup1").css("display", "block");
        $("#popup").css("display", "block");
    });
    $("#option-box #affirm").on('click', function() {
        $("#popup1").css("display", "none");
        $("#popup").css("display", "none");
    })
    $("#option-box #popup1").on('click', function() {
        $("#popup1").css("display", "none");
        $("#popup").css("display", "none");
        $("#mycoupon-attention").css("display", "none");
    })

    $("#option-box #cancel").on('click', function() {
        $("#popup1").css("display", "none");
        $("#popup").css("display", "none");
    })
    $("#option-box .option-content-left-bottom").on('click', function() {
        $("#mycoupon-attention").css("display", "block");
        $("#popup1").css("display", "block");
    });
    $("#option-box #mycoupon-attention-iocn").on('click', function() {
        $("#popup1").css("display", "none");
        $("#mycoupon-attention").css("display", "none");
    })
});