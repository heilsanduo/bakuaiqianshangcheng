@import "../../../styles/common.less";
// 注册页面
.register {
    width: 100%;
    height: 100%;
    background: url("../images/register_bg.png") no-repeat;
    background-size: 100% 5.52rem;

    .register_text {
        width: 100%;
        height: 2.02rem;
        padding-top: 0.48rem;
        padding-left: 0.32rem;
        box-sizing: border-box;

        .register-text-now {
            width: 100%;
            height: 0.56rem;
            font-size: 0.4rem;
            font-weight: 800;
            line-height: 0.56rem;
            color: rgba(51, 51, 51, 1);
        }

        .register-text-now::before {
            content: "";
            display: inline-block;
            width: 0.32rem;
            height: 0.32rem;
            .bgSet();
            background-image: url("../images/login-left-arrows.png");
            background-position-y: 0.03rem;
        }

        .register-text-new {
            width: 100%;
            height: 0.34rem;
            font-size: 0.24rem;
            font-weight: 400;
            line-height: 0.34rem;
            color: rgba(51, 51, 51, 1);
        }
    }

    .register_main {
        width: 100%;
        height: 10.5rem;
        padding-left: 0.32rem;
        box-sizing: border-box;

        .register_content {
            width: 6.86rem;
            height: 6.76rem;
            padding-left: 0.32rem;
            padding-top: 0.64rem;
            box-sizing: border-box;
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 0.08rem 0.32rem rgba(0, 0, 0, 0.08);
            border-radius: 0.2rem;

            .register_main_phone,
            .register_main_password,
            .register_main_dbpassword,
            .register_main_code {
                width: 100%;
                height: 1.16rem;
                margin-bottom: 0.38rem;

                .register_phone,
                .register_password,
                .register_dbpassword,
                .register_code {
                    width: 100%;
                    height: 0.44rem;
                    font-size: 0.32rem;
                    font-weight: 800;
                    // line-height:0.42rem;
                    color: rgba(51, 51, 51, 1);
                    // border-bottom: 0.05rem solid #FFDE45;
                }

                .register_phone_num,
                .register_password_num,
                .register_dbpassword_num,
                .register_code_num {
                    width: 6.2rem;
                    height: 0.72rem;
                    background: rgba(255, 255, 255, 1);
                    border-bottom: 0.02rem solid rgba(245, 245, 245, 1);
                    position: relative;

                    >input {
                        width: 100%;
                        line-height: 0.72rem;
                        background: none;
                        outline: none;
                        border: 0px;
                        position: absolute;
                        left: 0;
                        top: 0;
                    }

                    .register_phone_wrong_msg,
                    .register_password_wrong_msg,
                    .register_dbpsw_wrong_msg {
                        width: .3.66rem;
                        height: 0.5rem;
                        position: absolute;
                        right: 0;
                        top: 0;
                        font-size: 0.15rem;
                        color: red;
                        // border:0.01rem solid #F15A53;
                        // border-radius:0.2rem;
                        text-align: center;
                        line-height: 0.5rem;
                        display: none;
                    }

                    .register_main_icons {
                        width: 1.24rem;
                        height: 0.08rem;
                        background: rgba(255, 222, 69, 1);
                        position: absolute;
                        left: 0;
                        top: -0.06rem;
                    }
                }

                .register_code_num {
                    .register_send_code {
                        position: absolute;
                        right: 0;
                        top: 0;
                        width: 2.16rem;
                        height: 0.72rem;
                        font-size: 0.24rem;
                        background: rgba(239, 239, 239, 1);
                        border-radius: 0.08rem;
                        text-align: center;
                        font-weight: 800;
                        line-height: 0.72rem;
                        border: 0;
                        outline: none;
                    }

                    .register_code_wrong_msg {
                        width: .3.66rem;
                        height: 0.5rem;
                        position: absolute;
                        right: 2.48rem;
                        top: -0.39rem;
                        font-size: 0.15rem;
                        color: red;
                        // border:0.01rem solid #F15A53;
                        // border-radius:0.2rem;
                        text-align: center;
                        line-height: 0.5rem;
                        display: none;
                    }

                    .register_code_icons {
                        width: 0.92rem;
                        height: 0.08rem;
                        background: rgba(255, 222, 69, 1);
                        position: absolute;
                        left: 0;
                        top: -0.06rem;
                    }
                }

            }
        }

        .register_footer {
            width: 100%;
            height: 3.74rem;
            padding-top: 0.75rem;
            box-sizing: border-box;

            .register_footer_text {
                width: 100%;
                display: flex;
                padding-bottom: 0.48rem;
                box-sizing: border-box;

                .register_footer_icon {
                    flex: 1;
                    display: flex;
                    justify-content: center;
                    align-items: center;
// 替换>img
                    .agree_or_not {
                        margin:0 0.32rem;
                        flex:none;
                       .checkbox;
                    }
                }

                .register_footer_agree {
                    flex: 6;
                    display: flex;

                    .register_agree_read {
                        font-size: 0.24rem;
                        font-weight: 800;
                        line-height: 0.34rem;
                        color: rgba(51, 51, 51, 1);
                        padding-right: 0.1rem;
                        box-sizing: border-box;
                    }

                    .register_agree_file {
                        font-size: 0.24rem;
                        font-weight: 800;
                        line-height: 0.34rem;
                        color: rgba(241, 90, 83, 1);
                    }
                }

                .register_footer_login {
                    flex: 3;
                    font-size: 0.24rem;
                    font-weight: 800;
                    line-height: 0.42rem;
                    color: rgba(241, 90, 83, 1);
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
            }

            .register_footer_now {
                width: 6.86rem;
                height: 0.84rem;
                background: rgba(239, 239, 239, 1);
                border-radius: 0.12rem;
                display: flex;
                justify-content: center;
                align-items: center;
                color: rgba(51, 51, 51, 1);


                >input {
                    width: 100%;
                    line-height: 0.84rem;
                    background: none;
                    outline: none;
                    border: 0px;
                    font-size: 0.26rem;
                    font-weight: 800;
                    text-align: center;
                }
            }
        }

    }





}

