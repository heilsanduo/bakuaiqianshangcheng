	messageBox(data, callback) {
		$(`<div class="seller-toast">
			    <div class="seller-toast-box">
			        <div class="${data.status ? '' : 'seller-toast-icon'}"></div>
			        <div class="seller-toast-message">${data.title}</div>
			    </div>
			</div>`).appendTo($("body"))
		setTimeout(() => {
			$(".seller-toast").addClass("seller-toast-active")
			setTimeout(() => {
				$(".seller-toast").remove()
			}, data.time || 1500)
			callback && callback()
		}, 200)
	},
	debounce(fn, wait){
		let timeout = null
		return function() {
			if (timeout !== null) {
				clearTimeout(timeout)
			}
			timeout = setTimeout(fn, wait)
		}
	},
});

