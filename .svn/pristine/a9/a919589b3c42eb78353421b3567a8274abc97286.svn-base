<script>
	$(function () {
		//选项卡
		$("#myintegral-box-top div").click(function () {
			//点击当前的变高亮+排他
			$(this)
				.addClass("myintegral-active")
				.siblings("div")
				.removeClass("myintegral-active");
			//内容跟着出来
			$("#myintegral-box-bottom .option")
				.eq($(this).index())
				.css("display", "block")
				.siblings()
				.css("display", "none");
		});
	});

</script>
