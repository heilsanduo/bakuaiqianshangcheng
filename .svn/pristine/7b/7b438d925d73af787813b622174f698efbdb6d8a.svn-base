
@bgC: #FFDE45;

/* Home params*/
@HomePadding: 0.28rem 0.32rem;

.hover-class{
  transition:  all linear 0.1s;
  cursor: pointer;
  -webkit-user-select: none;
  outline: none;
  &:active{
    //opacity: 0.8;
    box-shadow: inset 0 0.3rem 0.5rem rgba(0,0,0,.125);
    outline: none;
  }
  &:focus{
    outline: none;
  }
}
.hover-common-class(@color){
  transition:  all linear 0.1s;
  cursor: pointer;
  -webkit-user-select: none;
  outline: none;
  &:active{
    //opacity: 0.8;
    //box-shadow: inset 0 0.3rem 0.5rem rgba(0,0,0,.125);
    background-color:rgba(@color, 0.08);
    outline: none;
  }
  &:focus{
    outline: none;
  }
}

.fontBreak(@line: 1; @lineHeight: 0.24rem) {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: @line;
  line-height: @lineHeight;
}
.bgSet(@size: cover){
  background-position: center center;
  background-size: @size;
  background-repeat: no-repeat;
}
.imgAll{
  position:relative;
  z-index: 10;
  overflow: hidden;
  & > img{
    width: 100%;
    height: 100%;
  }
}

.yellowBottom(@fontSize: 0.32rem; @fontWeight: 800; @color: rgba(51,51,51,1)){
  position: relative;
  font-size: @fontSize;
  font-weight: @fontWeight;
  color: @color;
  z-index: 1;
  transition: all linear 0.2s;
  &:before{
    content:"";
    width: 100%;
    height: 0.08rem;
    display:inline-block;
    background-color: rgba(255,222,69,1);
    position:absolute;
    left: 0;
    bottom: 0.04rem;
    z-index: -2;
  }
}
.checkbox{
  -webkit-appearance: none;
  outline: none;
  width: 0.32rem;
  height: 0.32rem;
  background-color:rgba(239,239,239,1);
  border:0.16rem solid rgba(239,239,239,1);
  border-radius:50%;
  transition:  all linear 0.2s;
  &:checked{
    border:0.1rem solid #FFDE45;
    background-color:rgba(255, 255, 255,1);
  }
}
.hover-white-class{
  transition:  all linear 0.1s;
  cursor: pointer;
  -webkit-user-select: none;
  outline: none;
  &:active{
    background-color:rgba(0,0,0,0.08);
    outline: none;
  }
  &:focus{
    outline: none;
  }
}






