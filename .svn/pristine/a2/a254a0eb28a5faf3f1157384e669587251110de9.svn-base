@import "../../../styles/common.less";
// 解决滑动报错
html{
    touch-action:none;
 }
.address_edit{
    width:100%;
    height:100%;
    // address_edit
    .address_edit_header{
        width:100%;
        height:1rem;
        background:rgba(255,255,255,1);
        box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
        display:flex;
        padding-left:0.32rem;
        box-sizing:border-box;
        align-items: center;
        .address_edit_back{

            width:0.32rem;
            height: 0.32rem;
            background-image:url("../images/header_back_black_icon.png");
            .bgSet();
        }
        .address_edit_title{
            flex:1;
            font-size:0.32rem;
            font-weight:800;
            line-height:0.44rem;
            color:rgba(51,51,51,1);
            text-align:center;
        }
    }
    // address_edit内容区
    .address_edit_content{
        width:100%;
        height:100%;
        display: flex;
        align-items: center;
        flex-direction: column;
        padding-top:0.32rem;
        box-sizing:border-box;
    }
    .address_edit_list{
        width:6.68rem;
        height:4.62rem;
        background:rgba(255,255,255,1);
        box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
        border-radius:0.2rem;    
           
           >li{
            width:100%;
            height:1.04rem;
            font-size: 0.28rem;
            line-height:1.04rem;
            display:flex;
            align-items: center;
            padding:0 0.32rem;
            box-sizing:border-box;  
            .address_edit_consignee,.address_edit_phone,.address_edit_address{
                flex:2;
                font-size:0.28rem;
                font-weight:800;
                color:rgba(51,51,51,1);
            } 
            >input{
                flex:auto;
                text-align:right;
                font-size:0.28rem;
                font-weight:400;
                color:rgba(153,153,153,1);
                line-height: 1.04rem;
                background: none;
                outline: none;
                border: 0px;
            } 
            .address_edit_others{
                width:6.22rem;
                height:0.84rem;
                font-size:0.28rem;
                font-weight:400;
                line-height:0.42rem;
                color:rgba(153,153,153,1);
                outline: none;
                border: 0px;
            }    
           }
    }
    .address_edit_default{
        width:6.86rem;
        height:1.04rem;
        background:rgba(255,255,255,1);
        box-shadow:0 0.08rem 0.32rem rgba(0,0,0,0.08);
        border-radius:0.2rem;
        margin-top:0.32rem;
        font-size: 0.28rem;
        line-height:1.04rem;
        display:flex;
        align-items: center;
        padding:0 0.32rem;
        box-sizing:border-box; 
        .address_edit_setDefault{
            flex:auto;
            font-size:0.28rem;
            font-weight:800;
            color:rgba(51,51,51,1);
        } 
        .address_edit_btn{
            width:1.04rem;
            width:1.04rem;
            height:0.6rem;
            background:rgba(239,239,239,1);
            border-radius:0.32rem;
            padding:0.04rem 0 0.04rem 0.04rem;
            box-sizing: border-box;
            .address_edit_dot{
                width:0.52rem;
                height:0.52rem;
                background:rgba(255,255,255,1);
                border-radius:50%;
               float: left;
            }

        }
       
    }
    .address_delet{
        width:6.86rem;
        height:0.88rem;
        background:rgba(255,222,69,1);
        border-radius:0.12rem;
        text-align: center;
        line-height:0.88rem;
        font-size:0.28rem;
        font-weight: 800;
        color:rgba(51,51,51,1);
        margin-top:3.24rem;
    }

}