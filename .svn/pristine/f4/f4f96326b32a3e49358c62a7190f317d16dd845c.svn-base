@import "../../../styles/common.less";
/* 首页的菜单 */
.home-menu{
  width: 100%;
  height: 2.9rem;
  padding: 0.6rem 0.32rem 0 0.32rem;
}
.home-menu-header{
  width: 100%;
  height: 0.64rem;
  display:flex;
  align-items: center;
  flex:none;
  position:absolute;
  left:0;
  top:-0.32rem;
}
.home-menu-header div{
  width:1.48rem;
  height: 0.64rem;
  background-color:rgba(245,245,245,1);
  border-radius: 0.32rem;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size: 0.28rem;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 0.48rem;
  transition:  all linear 0.2s;
  .hover-class
}
.home-menu-header .home-menu-header-active{
  background-color:rgba(255,222,69,1);
  font-weight:800;
}
.home-menu-body{
  position:relative;
  display:flex;
  width:6.86rem;
  flex:none;
  height:2.02rem;
  background:rgba(255,255,255,1);
  box-shadow:0px 8px 32px rgba(0,0,0,0.06);
  opacity:1;
  border-radius:20px;
}
.home-menu-content{
  flex:auto;
  display:none
}
.home-menu-body .home-menu-content-active{
  display:flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 0.3rem;
}
.home-menu-item{
  width: 20%;
  height: 80%;
  display:flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  .hover-class
}
.home-menu-item img{
  width: 0.88rem;
  height: 0.88rem;
}
.home-menu-item span{
  font-size: 0.24rem;
  font-weight:400;
  line-height: 0.34rem;
  color:rgba(51,51,51,1);
}
/* 首页的菜单 - end */
