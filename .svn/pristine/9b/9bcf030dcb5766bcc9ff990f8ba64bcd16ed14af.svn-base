.set {
	width: 100%;
	height: 100%;
	position: relative;

	.set-top {
		position: absolute;
		top: .32rem;
		left: 0.32rem;
		width: 6.86rem;
		height: auto;
		background: rgba(255, 255, 255, 1);
		box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.08);
		border-radius: 20px;

		.set-head {
			width: 100%;
			height: 1.84rem;
			border-radius: 20px 20px 0 0;
		}

		.set-nickname {
			width: 100%;
			height: 1.02rem;
		}

		.set-site {
			width: 100%;
			height: 1.02rem;
			border-radius: 0 0 20px 20px;
		}
	}

	.set-bottom {
		position: absolute;
		top: 5.52rem;
		left: 0.32rem;
		width: 6.68rem;
		height: 1.02rem;
		background: rgba(255, 255, 255, 1);
		box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.08);
		opacity: 1;
		border-radius: 16px;
	}
}