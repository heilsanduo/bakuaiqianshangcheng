@import "../../../styles/common.less";

.mycoupon-box {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}

.mycoupon-box-top {
	width: 100%;
	height: 1.24rem;
	display: flex;
	justify-content: space-between;
	align-items: center;
	overflow-x: auto;
}

.mycoupon-box-top>div {
	white-space: nowrap;
	height: 0.4rem;
	margin: 0 0.32rem;
	font-size: 0.28rem;
	font-weight: 400;
	line-height: 0.4rem;
	color: rgba(51, 51, 51, 1);
}

.mycoupon-box-top div:nth-child(5) {
	width: .44rem;
	height: .44rem;
}

.mycoupon-active {
	height: .44rem !important;
	font-size: .32rem !important;
	font-weight: 800 !important;
	line-height: .44rem !important;
	.yellowBottom();
}

.option {
	width: 100%;
	height: 100%;
	display: none;
}